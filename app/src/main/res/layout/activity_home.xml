<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/purple_500">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descript_logo"
            app:srcCompat="@mipmap/ic_logo_inverse_foreground" />

        <LinearLayout
            android:id="@+id/laytout_liner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingRight="19dp"
            android:paddingLeft="19dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp">

            <TextView
                android:id="@+id/txt_wellcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Hello World!"
                android:textSize="24sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/txt_descript_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Hello World!"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <ListView
                android:id="@+id/lv_cursos"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1AFFFFFF"
                android:scrollbars="vertical">

            </ListView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>